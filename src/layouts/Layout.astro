---
import Nav from "components/Nav/index.astro";

import "@fontsource/lato";
import "@fontsource-variable/plus-jakarta-sans";
import heroBgImg from "../assets/heroBgImage.svg";
import heroBgImgMobile from "../assets/heroBgImageMobile.svg";
import Footer from "components/Footer";
import Faq from "components/Faq";
import "react-toastify/dist/ReactToastify.css";

import { ToastContainer } from "react-toastify";

export interface Props {
   title?: string;

   darkNavBg?: boolean;
   withoutBottomNav?: boolean;
   withoutFAQ?: boolean;
   withoutWhatBusinessSay?: boolean;
}

export const prerender = true;

let { title, darkNavBg, withoutBottomNav, withoutFAQ, withoutWhatBusinessSay } = Astro.props;
const PAGE_TITLE = title != null && title?.length > 0 ? title : "buildCAP - ";
