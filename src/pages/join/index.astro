---
import Layout from "../../layouts/Layout.astro";
import TextFormat from "lib/helpers/TextFormat";
import blueCheck from "assets/blueCheck.svg";
const pricingOptions = [
   {
      features: [
         "Create your unique profile ",
         "Include a video introduction",
         "Add your work history",
         "Specify your salary expectations",
      ],
   },
];
---

<Layout title="The buildCAP: Get the Best">
   <section
      class="container relative mt-24 flex w-full max-w-[1700px] flex-col gap-16 overflow-x-hidden px-container-base pt-4 md:gap-[10rem] md:py-[4.5rem] md:pt-[4.5rem] lg:px-container-lg xl:px-container-xl"
   >
      <div
         class="relative flex w-full flex-col gap-[1.5rem] md:grid md:grid-cols-[1fr_1fr] md:gap-[2.75rem]"
      >
         <div class="flex flex-grow flex-col justify-center gap-6 md:gap-10 2xl:gap-8">
            <p
               class="w-fit rounded-full bg-primary-1/5 p-4 px-6 text-lg font-[900] text-primary-1 md:p-4 md:px-8 md:text-2xl"
            >
               Let's Flip the script
            </p>
            <h1
               class="max-w-[40rem] text-left text-[2rem] font-[600] leading-[130%] tracking-[0.02rem] text-secondary-2 transition-all duration-500 ease-in-out md:text-[4.4rem] md:leading-[5rem] md:tracking-[0.0225rem] lg:ml-[-0.2rem]"
            >
               <TextFormat
                  text={"This is the New Way To Get Hired!"}
                  keyword={"New"}
                  keywordClassName="text-primary-1 transition-all duration-500 ease-in-out"
               />
            </h1>

            <div
               class="mb-5 flex items-center gap-4 transition-all duration-500 ease-in-out md:mb-0 md:ml-[-6px]"
            >
               <a href="/" class="">
                  <div
                     class="flex items-center justify-center gap-2 rounded-lg bg-primary-1 px-4 py-2 pr-6"
                  >
                     <img src="/svgs/playWhite.svg" class="h-[1.5rem] w-[1.5rem]" />

                     <div>
                        <p class="text-sm font-light tracking-wider text-white">Get it on</p>
                        <p class="text-base font-semibold tracking-wider text-white">Google Play</p>
                     </div>
                  </div>
               </a>
               <a href="/" class="">
                  <div
                     class="flex items-center justify-center gap-2 rounded-lg bg-primary-1 px-4 py-2 pr-6"
                  >
                     <img
                        src="/svgs/iosWhite.svg"
                        class="h-[1.5rem] w-[1.5rem] lg:h-[2rem] lg:w-[2rem]"
                     />

                     <div>
                        <p class="text-sm font-light tracking-wider text-white">Get it on</p>
                        <p class="text-base font-semibold tracking-wider text-white">App Store</p>
                     </div>
                  </div>
               </a>
            </div>
         </div>

         <section>
            <div
               class="relative flex h-full max-h-[45rem] min-h-[25.375rem] w-full flex-col items-end justify-between rounded-3xl lg:min-h-[30.375rem] 2xl:min-h-[40.375rem]"
               style={{
                  background: `linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.3)), url('/images/about/hero.jpg')`,
                  backgroundSize: "cover",
                  backgroundPosition: "center",
               }}
            >
            </div>
         </section>
      </div>
      <div
         class="relative flex w-full flex-col-reverse gap-[1.5rem] md:grid md:grid-cols-[1fr_1fr] md:gap-[2.75rem]"
      >
         <section>
            <div
               class="relative flex h-full max-h-[45rem] min-h-[25.375rem] w-full flex-col items-end justify-between rounded-3xl lg:min-h-[30.375rem] 2xl:min-h-[40.375rem]"
               style={{
                  background: `linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.3)), url('/images/about/hero1.jpg')`,
                  backgroundSize: "cover",
                  backgroundPosition: "center",
               }}
            >
            </div>
         </section>
         <div class="flex flex-grow flex-col justify-center gap-6 2xl:gap-8">
            <p class="w-fit rounded-full bg-primary-1/5 p-2 px-6 text-xl font-[900] text-primary-1">
               Join The buildCAP!
            </p>
            <h1
               class="text-left text-[1.4rem] font-[600] leading-[130%] tracking-[0.02rem] text-secondary-2 transition-all duration-500 ease-in-out md:text-[1.5rem] md:leading-[2.5rem] md:tracking-[0.0225rem] lg:ml-[-0.2rem]"
            >
               <TextFormat
                  text={"We want you to benefit from the ability to showcase your profile to employers without having to only apply to specific jobs."}
                  keyword={"Story"}
                  keywordClassName="text-primary-1 transition-all duration-500 ease-in-out"
               />
            </h1>

            {
               pricingOptions.map((option) => (
                  <div class="flex w-full flex-col gap-[1.75rem] bg-white py-[1.5rem] lg:max-w-[25.375rem] lg:bg-transparent">
                     <div class="flex flex-col gap-[1.5rem]">
                        {option.features.map((feature) => (
                           <div class="flex items-center gap-[1rem]">
                              {/* Assuming you still want to use the blueCheck image for each feature */}
                              <img class="w-[1rem]" src={blueCheck} alt="" />
                              <span class="leading-[1.5rem] text-gray-500">{feature}</span>
                           </div>
                        ))}
                     </div>

                     <button class="w-fit rounded-[0.5rem] bg-primary-1 px-8 py-4 shadow-1 transition-opacity duration-300 ease-in-out hover:opacity-90 active:opacity-100">
                        <span class="font-[500]  leading-[1.5rem] tracking-[0.02875rem] text-white">
                           <a href="/">
                              Get Started <span class="ml-2">â†’</span>
                           </a>
                        </span>
                     </button>
                  </div>
               ))
            }
         </div>
      </div>
   </section>

   <section class="w-full px-container-base py-[2.5rem] lg:px-container-lg xl:px-container-xl">
   </section>
</Layout>
