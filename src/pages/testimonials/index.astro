---
import Layout from "../../layouts/Layout.astro";
import Testimonial from "components/Testimonials";
---

<Layout title="The buildCAP: Get the Best">
   <section
      class="container relative mt-24 w-full max-w-[1700px] overflow-x-hidden px-container-base md:py-[4.5rem] md:pt-[2.5rem] lg:px-container-lg xl:px-container-xl"
   >
      <div class="flex w-full flex-col gap-[2.5rem]">
         <h3
            class="text-center text-[1.7rem] font-[600] leading-[3.5rem] tracking-[-0.05rem] text-secondary-2 md:text-[2.5rem]"
         >
            What our clients say about us
         </h3>
         <Testimonial client:only />
      </div>
   </section>

   <section class="w-full px-container-base py-[2.5rem] lg:px-container-lg xl:px-container-xl">
   </section>
</Layout>
